<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
 
    <ImageView android:id="@+id/full_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/full_image_desc"
            android:contentDescription="@string/full_img_desc"/>
    
    <TextView android:id="@+id/full_image_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:maxLines="10"
            android:layout_centerInParent="true"
            android:textSize="16sp"
            android:layout_above="@+id/full_image_other_details"/>
    
    <TextView android:id="@+id/full_image_other_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:maxLines="10"
            android:layout_alignParentBottom="true"/>
 
</RelativeLayout>